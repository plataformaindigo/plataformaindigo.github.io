<body>

<h2>Hoja INFORMES â€“ Vista de prueba</h2>

<table id="tabla">
  <thead></thead>
  <tbody></tbody>
</table>

<script>
  const ENDPOINT = "https://script.google.com/macros/s/AKfycbzfWoDsOjfyxf_cTk8znR-omBAgPnOafGfJHW5Ej_Dk/exec?page=externo_lista";

  fetch(ENDPOINT)
    .then(r => r.json())
    .then(data => {
      const registros = Array.isArray(data) ? data : data.registros;
      if (!registros || !registros.length) return;

      const headers = Object.keys(registros[0]);
      const thead = document.querySelector("#tabla thead");
      const tbody = document.querySelector("#tabla tbody");

      // headers
      thead.innerHTML =
        "<tr>" + headers.map(h => `<th>${h}</th>`).join("") + "</tr>";

      // filas
      tbody.innerHTML = registros.map(row =>
        "<tr>" +
          headers.map(h => `<td>${row[h] ?? ""}</td>`).join("") +
        "</tr>"
      ).join("");
    })
    .catch(err => {
      document.body.innerHTML += "<p>Error cargando datos</p>";
      console.error(err);
    });
</script>

</body>
</html>
